<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_bg3"
    android:padding="10dp">

    <ImageView
        android:id="@+id/fruit_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/edit_bg2" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="276dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/fruit_image"
        android:text="Will And Jaden Smith Give The Most Bizarre Interview in Hollywood History"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="186dp"
        android:layout_height="20dp"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="80dp"
        android:text="CHGX · 10:48"
        android:textColor="#BFBFBF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:text="♡2 Ω112"
        android:textColor="#BFBFBF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fruit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:textColor="#63B8FF"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/username"
        android:text="2 hours ago"
        android:textColor="#BFBFBF" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="48dp"
        android:background="@mipmap/add2" />


</RelativeLayout>